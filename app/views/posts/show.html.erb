<div class="min-h-screen bg-gray-100 p-6">
  <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-4"><%= @post.title %></h1>
    <p class="text-gray-600"><%= @post.body %></p>
    <p class="text-sm text-gray-500 mt-2">Posted by <%= @post.user.name %> at <%= @post.created_at.strftime("%B %d, %Y") %></p>

    <div class="mt-6">
      <h2 class="text-2xl font-semibold text-gray-700">Comments</h2>
      <% if @post.comments.any? %>
        <% @post.comments.each do |comment| %>
          <div class="bg-gray-50 p-4 mt-4 shadow rounded-lg">
            <p class="text-gray-800"><%= comment.body %></p>
            <p class="text-sm text-gray-500 mt-2">By <%= comment.user.name %> at <%= comment.created_at.strftime("%B %d, %Y") %></p>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-600 mt-4">No comments yet.</p>
      <% end %>
    </div>

    <div class="mt-6">
      <a href="<%= posts_path %>" class="bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-600">Back to All Posts</a>
    </div>
  </div>
</div>